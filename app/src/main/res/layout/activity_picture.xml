<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ImageButton for Delete action -->
        <ImageView
            android:id="@+id/idIVsection"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>

        <!-- ImageButton for Delete action -->
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:background="@drawable/circular_button_background"
            android:padding="3dp"
            android:src="@android:drawable/ic_menu_delete"/>

        <!-- ImageButton for Update action -->
        <ImageButton
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:background="@drawable/circular_button_background"
            android:padding="3dp"
            android:src="@android:drawable/ic_menu_edit"
            />

        <!-- TextView at the bottom -->
        <TextView
            android:id="@+id/idTVSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idIVsection"
            android:text="@string/app_name"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/idUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVSection"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/imgType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idUrl"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:visibility="gone" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>